<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CreateMessageActivity">

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/btn_sendmsg"
       android:layout_marginTop="40dp"
       android:layout_alignParentTop="true"
       android:layout_marginLeft="20dp"
       android:text="@string/btn_sendmsg"
       android:onClick="btnSendMessage"
       />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sendmsgapps"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/btn_sendmsg"
        android:layout_below="@+id/btn_sendmsg"
        android:text="@string/btn_sendmsgapp"
        android:onClick="btnSendMessageApp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etxt_msg"
        android:layout_alignLeft="@+id/btn_sendmsg"
        android:hint="@string/etxt_msg"
        android:layout_below="@+id/btn_sendmsgapps"
        android:layout_marginTop="20dp"
        android:ems="10"/>

</RelativeLayout>
