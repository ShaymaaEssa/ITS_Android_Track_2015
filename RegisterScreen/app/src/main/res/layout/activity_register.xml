<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="40sp"
        android:id="@+id/txt_title"
        android:text="@string/txt_title"
        android:textColor="#ff0267ff"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etxt_firstname"
        android:hint="@string/etxt_firstname"
        android:layout_gravity="left"
        android:layout_marginTop="50dp"
        android:ems="15"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etxt_lastname"
        android:hint="@string/etxt_lastname"
        android:layout_gravity="left"
        android:layout_marginTop="50dp"
        android:ems="15"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etxt_email"
        android:hint="@string/etxt_email"
        android:layout_gravity="left"
        android:layout_marginTop="50dp"
        android:ems="15"

        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_Gender"
            android:layout_marginRight="35dp" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rbtn_male"
            android:id="@+id/rbtn_male"
            android:layout_marginRight="20dp"
            android:checked="true"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rbtn_female"
            android:id="@+id/rbtn_female"/>
    </RadioGroup>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chk_terms"
        android:id="@+id/chk_terms"
        android:layout_marginTop="15dp"
        android:checked="true"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_signup"
        android:text="@string/btn_signup"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textAllCaps="false" />


</LinearLayout>
